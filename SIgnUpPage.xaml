<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Adhynda.SIgnUpPage"
             BackgroundColor="#ff99cc"
             Title="SIgnUpPage">
    <ScrollView>
        
    <VerticalStackLayout Spacing="0"
                         Padding="30,0"
                         VerticalOptions="Center">
        

        <VerticalStackLayout Spacing="1" Padding="2">
            <Label FontFamily="Sitka" FontSize="Title"  FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Text="Welcome!" TextColor="Black"/>
            <Label FontFamily="OpenSansBold" FontSize="Subtitle"  FontAttributes="Italic"
                   HorizontalTextAlignment="Center"
                   Text="Sign In To Make New Account" TextColor="Black"/>
            <StackLayout Padding="5" Margin="-5,5,5,-5" VerticalOptions="Center">
                <Label FontFamily="Sitka" FontAttributes="Bold" FontSize="15"
                Text="Full Name" TextColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Frame ZIndex="1" HasShadow="True" HeightRequest="60" WidthRequest="60" 
                   CornerRadius="30" 
                  BorderColor="#ff0066">
                    <Image Source="singupuser.png" 
                           HeightRequest="20" WidthRequest="20"/>
                </Frame>
                <Frame  HeightRequest="45" Margin="-20,0,0,0" Padding="0" HasShadow="True" 
                   HorizontalOptions="FillAndExpand"
                    BorderColor="#ff0066">
                    <Entry  Margin="20,0,0,0" VerticalOptions="Center"  
                       Keyboard="Email"
                       Placeholder="Enter Ypur Full Name"/>
                </Frame>
            </StackLayout>
            <StackLayout Padding="5" Margin="-5,5,5,-5" VerticalOptions="Center">
                <Label FontFamily="Sitka" FontAttributes="Bold" FontSize="15"
                Text="Phone Number" TextColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Frame ZIndex="1" HasShadow="True" HeightRequest="60" WidthRequest="60" 
                   CornerRadius="30" 
                  BorderColor="#ff0066">
                    <Image Source="mobile.png" 
                           HeightRequest="20" WidthRequest="20"/>
                </Frame>
                <Frame  HeightRequest="45" Margin="-20,0,0,0" Padding="0" HasShadow="True" 
                   HorizontalOptions="FillAndExpand"
                    BorderColor="#ff0066">
                    <Entry  Margin="20,0,0,0" VerticalOptions="Center"  
                       Keyboard="Email"
                       Placeholder="+12345678"/>
                </Frame>
            </StackLayout>
            <StackLayout Padding="5" Margin="-5,5,5,-5" VerticalOptions="Center">
                <Label FontFamily="Sitka" FontAttributes="Bold" FontSize="15"
                Text="Email" TextColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Frame ZIndex="1" HasShadow="True" HeightRequest="60" WidthRequest="60" 
                   CornerRadius="30" 
                  BorderColor="#ff0066">
                    <Image Source="email.jpg" 
                           HeightRequest="20" WidthRequest="20"/>
                </Frame>
                <Frame  HeightRequest="45" Margin="-20,0,0,0" Padding="0" HasShadow="True" 
                   HorizontalOptions="FillAndExpand"
                    BorderColor="#ff0066">
                    <Entry  Margin="20,0,0,0" VerticalOptions="Center"  
                       Keyboard="Email"
                       Placeholder="Email@gmail.com"/>
                </Frame>
            </StackLayout>

            <StackLayout Padding="5" Margin="-5,5,5,-5" VerticalOptions="Center">
                <Label FontFamily="Sitka" FontAttributes="Bold" FontSize="15"
                Text="Password" TextColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Frame ZIndex="1" HasShadow="True" HeightRequest="60" WidthRequest="60" 
                   CornerRadius="30" 
                   BorderColor="#ff0066">
                    <Image HorizontalOptions="FillAndExpand" Source="lock2.jpg" 
                           HeightRequest="20" WidthRequest="20"/>
                </Frame>
                <Frame HeightRequest="45" Margin="-20,0,0,0" Padding="0" HasShadow="True" 
                   HorizontalOptions="FillAndExpand"
                   BorderColor="#ff0066">
                    <Entry  Margin="20,0,0,0" VerticalOptions="Center"  
                       Keyboard="Email"
                        IsPassword="True"
                       Placeholder="***"/>
                </Frame>
            </StackLayout>
            <StackLayout Padding="5" Margin="-5,5,5,-5" VerticalOptions="Center">
                <Label FontFamily="Sitka" FontAttributes="Bold" FontSize="15"
                Text="Confirm Password" TextColor="Black"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Frame ZIndex="1" HasShadow="True" HeightRequest="60" WidthRequest="60" 
                   CornerRadius="30" 
                   BorderColor="#ff0066">
                    <Image HorizontalOptions="FillAndExpand" Source="lock2.jpg" 
                           HeightRequest="20" WidthRequest="20"/>
                </Frame>
                <Frame HeightRequest="45" Margin="-20,0,0,0" Padding="0" HasShadow="True" 
                   HorizontalOptions="FillAndExpand"
                   BorderColor="#ff0066">
                    <Entry  Margin="20,0,0,0" VerticalOptions="Center"  
                       Keyboard="Email"
                        IsPassword="True"
                       Placeholder="***"/>
                </Frame>
            </StackLayout>
            <Button FontFamily="OpenSansBold" Text="Sign Up"  
                    WidthRequest="100" CornerRadius="20" HorizontalOptions="Center"
                BackgroundColor="#cc0066"/>
            <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                <Label FontFamily="Sitka" FontAttributes="Bold" 
                   Text="AlreadyHave Account?" TextColor="Black"/>
                <Label FontFamily="Sitka" FontAttributes="Bold"
                   Text="Sign In Here" TextColor="Blue">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Label.GestureRecognizers>

                </Label>
            </StackLayout>
            



        </VerticalStackLayout>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>